<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DescriptionText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">20dip</item>
        <item name="android:paddingBottom">10dip</item>
    </style>

    <style name="NormalText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/abc_text_size_medium_material</item>
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:background">@null</item>
    </style>

    <style name="SeperationLine">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:layout_marginTop">@dimen/distance_to_line</item>
    </style>

    <style name="HourIndicator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>
    <style name="HourIndicatorPause">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">98</item>
    </style>
    <style name="HourHalfIndicator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:background">#FFFF0000</item>
<!--        <item name="android:src">@drawable/dotted</item> if it is a imageview...?! not worked :(-->
    </style>
    <style name="HourHalfIndicatorPause">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">48</item>
    </style>

    <style name="HourDescription">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="TitleText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/abc_text_size_medium_material</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingTop">@dimen/text_distance_top</item>
        <item name="android:background">@null</item>
    </style>

    <style name="DeleteButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_marginTop">32dp</item>

    </style>

</resources>
